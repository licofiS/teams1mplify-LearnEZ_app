<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearnEZ" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#414141</item>
        <item name="colorPrimaryVariant">#282828</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="listPreferredItemPaddingStart">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>

        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <style name="Theme.LearnEZ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LearnEZ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LearnEZ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LearnEZ.Fullscreen" parent="Theme.LearnEZ">
        <item name="android:actionBarStyle">@style/Widget.Theme.S1mplify.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>