<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3D3D"
    android:isScrollContainer="false"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    tools:context=".ui.learn_fragment"
    android:layout_marginBottom="60dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Stream View -->

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            tools:ignore="Suspicious0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Stream:- "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <!-- Stream Spinner -->
            <Spinner
                android:id="@+id/Stream"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_border"
                android:padding="5dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Subject View -->

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/subjectlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Subject:- "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <!-- Subject Spinner -->
            <Spinner
                android:id="@+id/Subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_border"
                android:padding="5dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Topic View -->

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/topiclayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Topics:- "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <!-- Subject Spinner -->
            <Spinner
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:id="@+id/Topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_border"
                android:padding="5dp"
                android:textColor="@color/black" />

        </LinearLayout>


        <!-- Youtube View -->

        <LinearLayout
            android:id="@+id/imagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0D2E2E2E">

            <Button
                android:id="@+id/youtube"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Click here!!! "
                android:drawableTop="@drawable/youtube"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>

        <!-- Offline View -->
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/topiclayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Offline Resources:- "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Physics"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <Button
                android:id="@+id/hcverma1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/yellow_border"
                android:textColor="@color/black"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="1. HC Verma PART 1"
                android:textAlignment="inherit"
                android:textSize="20sp" />

            <Button
                android:id="@+id/hcverma2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/yellow_border"
                android:textColor="@color/black"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="2. HC VERMA PART 2"
                android:textAlignment="inherit"
                android:textSize="20sp" />

            <Button
                android:id="@+id/ncert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/yellow_border"
                android:textColor="@color/black"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="3. NCERT"
                android:textAlignment="inherit"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>
